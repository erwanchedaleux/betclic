/***************************************/

.site-navigation
    position                            fixed
    bottom                              0
    left                                0
    width                               100%
    height                              $navigationHeight
    background-color                    $color2
    box-shadow(0, 0, 24px, 0, 0.1)

.sn-list
    display                             table
    width                               100%

.sn-itm
    display                             table-cell
    width                               1%
    text-align                          center

.sn-lnk
    position                            relative
    display                             block
    padding                             8px 0

    &.active
    &:hover
    &:focus
    &:active
        .sn-lnk_text
            color                       $color3

.sn-lnk_icon
    display                             block
    margin                              0 auto

    &.icon-sports
        width                           22px
        height                          23px

    &.icon-calendar
        width                           22px
        height                          24px

    &.icon-star
    &.icon-games
        width                           24px
        height                          @width

    &.icon-resultats
        width                           23px
        height                          25px

.sn-lnk_text
    display                             block
    font-size                           1rem
    color                               $color14
    letter-spacing                      0.2px
    line-height                         1.3
    font-b()

.sn-lnk_notification
    display                             block
    position                            absolute
    top                                 1px
    left                                50%
    margin-left                         5px
    background-color                    $color3
    color                               $color2
    font-size                           1.2rem
    height                              20px
    line-height                         1.2
    padding                             3px
    text-align                          center
    rounded-block( 10px )

.sn-bet
    position                            absolute
    bottom                              $navigationHeight
    right                               0
    width                               60px
    height                              @width
    margin-bottom                       15px
    margin-right                        25px
    overflow                            hidden
    purple-scarlet-gradient-linear-to-bottom()
    rounded-block()
    box-shadow(0, 2px, 4px, 0, 0.4)

.sn-bet_lnk
    display                             block
    width                               100%
    height                              100%
    transition4(background)

    &:hover
    &:focus
    &:active
        background-color            $color3

        .sn-bet_cart
            transform                   translate(-50%, -50%) scale(1.1)

.sn-bet_cart
    display                             block
    width                               27px
    height                              25px
    margin-left                         -2px
    transition3()
    translate-middle()

/* Mediaqueries Tablet ( >= 640px) */
@media all and ( min-width: $smallScreenContentMaxWidth )

    .site-navigation
        height                          $navigationHeightTablet

    .sn-bet
        bottom                          $navigationHeightTablet

    .sn-lnk
        padding                         13px 0


/* Mediaqueries Desktop ( >= 768px) */
@media all and ( min-width: $mediumScreenContentMaxWidth )

    .site-navigation
        height                          $navigationHeightDesktop

    .sn-bet
        bottom                          $navigationHeightDesktop

    .sn-lnk_notification
        top                             10px

    .sn-lnk
        padding                         18px 0
