/***************************************/

.mod-game
    background-color                    $color2
    margin-bottom                       15px
    overflow                            hidden
    box-shadow(0, 0, 12px, 0, 0.15)
    rounded-block(4px)

    &:last-child
        margin-bottom                   0

    &.live
        .mg-informations
            background-color            $color15
            padding-top                 10px
            padding-bottom              10px

        .mg-informations_match-name
            color                       $color2
            line-height                 1.2
            clear                       both

        .mg-informations_match-event
            line-height                 1.3

        .mg-informations_bet-value
            color                       $color2

        .mg-informations_match-time
            text-align                  right
            margin-right                10px

.mg-foreground
    position                            relative

.mg-foreground_img
    display                             block
    margin-bottom                       -1px

.mg-foreground_live-icon
    display                             block
    position                            absolute
    top                                 8px
    left                                12px
    width                               35px
    height                              16px
    hide-text()

.mg-informations
    display                             table
    padding                             15px 10px 5px 10px
    width                               100%

.mg-informations_drawing
.mg-informations_text
.mg-informations_bets
    display                             table-cell
    vertical-align                      middle

.mg-informations_drawing
    width                               35px

.mg-informations_bets
    width                               40px

.mg-informations_icon
    display                             block
    width                               24px
    height                              @width

.mg-informations_match-time
    display                             block
    font-size                           1.1rem
    letter-spacing                      -0.3px
    color                               $color13
    text-transform                      uppercase
    line-height                         1.1
    margin-bottom                       3px
    font-eb()

.mg-informations_text
    font-eb()

.mg-informations_match-name
    display                             block
    font-size                           1.8rem
    letter-spacing                      -0.4px
    color                               $color16
    line-height                         1
    margin-bottom                       3px
    font-eb()

.mg-informations_match-score
    margin                              0 8px

.mg-informations_live-icon
    float                               left
    display                             block
    width                               35px
    height                              16px
    margin-bottom                       5px
    margin-right                        5px
    hide-text()

.mg-informations_live-tv-icon
    float                               left
    display                             block
    width                               19px
    height                              16px
    margin-bottom                       5px
    hide-text()

.mg-informations_tv-icon
    display                             inline-block
    width                               16px
    height                              12px
    margin-right                        3px
    vertical-align                      middle
    hide-text()

.mg-informations_match-event
    display                             block
    font-size                           1.2rem
    letter-spacing                      -0.3px
    color                               $color13
    line-height                         1.1
    font-eb()

.mg-informations_bets
    text-align                          center

.mg-informations_bet-lnk
    position                            relative
    display                             block
    padding-right                       15px

.mg-odds_seo
    display                             none

.mg-informations_bet-value
    display                             block
    font-size                           1.6rem
    letter-spacing                      -0.4px
    color                               $color16
    line-height                         1.1
    font-b()

.mg-informations_bet-label
    display                             block
    font-size                           1.1rem
    letter-spacing                      -0.4px
    color                               $color13
    line-height                         1
    font-b()

.mg-informations_bet-icon
    position                            absolute
    top                                 50%
    right                               0
    transform                           translateY(-50%)
    display                             block
    width                               7px
    height                              12px

.mg-odds
    display                             table
    table-layout                        fixed
    width                               100%
    max-width                           410px
    padding                             15px 50px 8px 10px

.mg-odds_odd
    position                            relative
    display                             table-cell
    width                               1%
    background-color                    $color5
    border-right                        8px solid $color2
    padding                             11px

.mg-odds_odd-min
    background-color                    $color16

    .mg-odds_value
        color                           $color5

.mg-odds_label
    font-size                           1.4rem
    color                               $color2
    margin-right                        10px
    font-b()

.mg-odds_value
    position                            absolute
    left                                50%
    transform                           translateX(-50%)
    font-size                           1.4rem
    color                               $color16
    margin-left                         7px
    font-eb()

.mg-odds_btn
    display                             block
    margin-right                        8px

.mg-score-tennis
    text-align                          right
    margin-right                        15px
    margin-bottom                       10px

.mg-score-tennis_time
    font-size                           1.1rem
    color                               $color13
    letter-spacing                      -0.3px
    font-b()

.mg-score-tennis_board
    display                             table

.mg-score-tennis_set
.mg-score-tennis_set_in-progress
    display                             table-cell
    font-size                           1.8rem
    color                               $color2
    width                               100%
    padding-left                        10px
    font-eb()

.mg-score-tennis_lost-set
.mg-score-tennis_win-set
.mg-score-tennis_set-inprogress
    display                             block
    line-height                         1.2
    height                              20px

.mg-score-tennis_lost-set
    color                               $color14

.mg-score-tennis_win-set
    color                               $color13

