hide-text()
    color:                              transparent;
    font:                               0/0px;
    text-shadow:                        none;

placeholder()
    &::-moz-placeholder
        opacity                         1
        {block}

    &::-webkit-input-placeholder
        {block}

    &:-ms-input-placeholder
        {block}


clearfix()
    &:before
    &:after
        content                         ""
        display                         table

    &:after
        clear                           both

ellipsis-text( $width = 100% )
    display                             block
    text-overflow                       ellipsis
    white-space                         nowrap
    overflow                            hidden
    width                               $width

rounded-block( $value = 100% )
    border-radius                       $value

translate-middle()
    position                            absolute
    top                                 50%
    left                                50%
    transform                           translate(-50%, -50%)

box-shadow( $horizontal = 0, $vertical = 0, $blur = 10px, $spread = 0, $opacity = 0.1 )
    box-shadow                          $horizontal $vertical $blur $spread rgba($color1, $opacity);

transition1()
    transition                          all 0.2s cubic-bezier(.20,1,.20,1)

transition2()
    transition                          all 0.25s ease

transition3()
    transition                          all 0.5s ease

transition4( $prop )
    transition                          $prop 0.5s ease

purple-scarlet-gradient-linear-to-right()
    background                          -moz-linear-gradient(right, rgba( $color4 ,1 ) 0%, rgba( $color3, 1 ) 100%); /* FF3.6-15 */
    background                          -webkit-linear-gradient(right, rgba( $color4, 1 ) 0%, rgba( $color3, 1 ) 100%); /* Chrome10-25,Safari5.1-6 */
    background                          linear-gradient(to right, rgba( $color4, 1 ) 0%, rgba( $color3, 1 ) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
